<?xml version="1.0" encoding="UTF-8"?>

<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>jaccept</groupId>
  <artifactId>root</artifactId>
  <packaging>pom</packaging>
  <version>0.2.0-SNAPSHOT</version>
  <name>Jaccept</name>
  <description>JUnit extension providing acceptence test capabilities</description>
  <url>http://jaccept.sourceforge.net</url>
  <issueManagement>
      	<system>Sourceforge</system>    	
  </issueManagement>
  <mailingLists>
  </mailingLists>
  <developers>
      <developer>
        <id>mikis</id>
        <name>Mikis Seth Sorensen</name>
        <email>mikisseth@sourceforge.org</email>
        <timezone>+1</timezone>
        <roles>
           <role>
        	PMC Chair
           </role>
        </roles>
      </developer>
  </developers>
  <licenses>
      <license>
      	<name>Common Public License - v 1.0</name>
      	<url>http://www.eclipse.org/legal/cpl-v10.html</url>
        <distribution>repo</distribution>
      </license>
  </licenses>
  <scm>
      <connection>scm:svn:http://svn.sourceforge.net/svnroot/jaccept/trunk</connection>
      <developerConnection>scm:svn:https://svn.sourceforge.net/svnroot/jaccept/trunk</developerConnection>
      <url>http://svn.sourceforge.net/viewcvs.cgi/jaccept</url>
  </scm>
  <modules>
	<module>jaccept-core</module>
	<module>jaccept-gui</module>
  </modules>
  <reporting>
	<plugins>
              <plugin>
                  <groupId>org.apache.maven.plugins</groupId>
                  <artifactId>maven-project-info-reports-plugin</artifactId>
               </plugin>
           </plugins>
  </reporting>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-release-plugin</artifactId>
        <configuration>
          <tagBase>scm:svn:https://svn.sourceforge.net/svnroot/jaccept/tags</tagBase>
        </configuration>
      </plugin>
      <plugin> 
      	<artifactId>maven-javadoc-plugin</artifactId> 
        	<configuration> 
               	<aggregate>true</aggregate> 
       	</configuration> 
      </plugin>
      <plugin> 
        <artifactId>maven-compiler-plugin</artifactId> 
        <version>RELEASE</version> 
        <configuration> 
          <compilerVersion>1.6</compilerVersion> 
          <source>1.5</source> 
          <target>1.5</target> 
          <debug>true</debug> 
          <showDeprecation>true</showDeprecation> 
          <showWarnings>true</showWarnings> 
          <optimize>false</optimize> 
        </configuration> 
      </plugin> 
    </plugins>
  </build>
</project>
